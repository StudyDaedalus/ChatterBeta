<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:id="@+id/friend_moment_head"
            android:contentDescription="@string/app_name"
            android:layout_width="50.0dp"
            android:layout_height="50.0dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/moment_txtNameColor"
            android:text="undone_user_name"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/friend_moment_head"
            android:layout_toEndOf="@+id/friend_moment_head"
            android:id="@+id/moment_friend_name" />
        <TextView
            android:id="@+id/moment_friend_moment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/textBlack"
            android:text="undone_txt_friend_moment"
            android:layout_toRightOf="@id/friend_moment_head"
            android:layout_below="@id/moment_friend_name"
            android:layout_marginTop="3dp"/>
        <LinearLayout
            android:id="@+id/layImgLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moment_friend_moment"
            android:layout_alignLeft="@+id/moment_friend_moment"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <ImageView
                android:id="@+id/moment_publish_img1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/app_icon"
                android:layout_weight="1"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp" />
            <ImageView
                android:id="@+id/moment_publish_img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/app_icon"
                android:layout_weight="1"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                />
            <ImageView
                android:id="@+id/moment_publish_img3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/app_icon"
                android:layout_weight="1"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/moment_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layImgLine"
            android:layout_alignLeft="@+id/layImgLine"
            android:text="undone_moment_time"
            android:textColor="@color/moment_timeColor"/>
        <ImageView
            android:layout_width="23dp"
            android:layout_height="16dp"
            android:layout_below="@id/layImgLine"
            android:layout_alignRight="@id/layImgLine"
            android:src="@drawable/reply_icon" />
    </RelativeLayout>
</LinearLayout>